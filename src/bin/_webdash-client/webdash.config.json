{
    "commands": [
        {
            "name": "install",
            "action": "bash install.sh",
            "wdir": "$.thisDir()"
        },
        {
            "name": "build",
            "actions": [
                "rm -f build/webdash",
                "make -C build"
            ],
            "dependencies": [
                "./src/lib/webdash-executor/webdash.config.json:build"
            ],
            "wdir": "$.thisDir()"
        },
        {
            "name": "all",
            "dependencies": [
                ":build",
                ":install"
            ],
            "wdir": "$.thisDir()"
        },
        {
            "name": "report-build-state",
            "actions": [
                "report-build-state build"
            ],
            "frequency": "daily",
            "when": "new-day",
            "wdir": "$.thisDir()"
        },
        {
            "name": "git-status",
            "action": "git status",
            "wdir": "$.thisDir()"
        },
        {
            "name": "report-repo-state",
            "actions": [
                "report-repo-state git-status"
            ],
            "frequency": "daily",
            "when": "new-day",
            "wdir": "$.thisDir()"
        }
    ]
}